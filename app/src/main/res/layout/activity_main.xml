<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/petLifeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Life"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="@color/tituloColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/paginaInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Dados do Animal"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/petLifeTv" />


        <!-- Campo para nome do pet -->
        <EditText
            android:id="@+id/nomePetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Pet"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paginaInicial" />

        <!-- Campo para data de nascimento -->
        <EditText
            android:id="@+id/dataNascimentoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de Nascimento"
            android:inputType="date"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nomePetEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Outros campos de informações do pet -->
        <!-- Tipo -->
        <EditText
            android:id="@+id/tipoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dataNascimentoEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cor -->
        <EditText
            android:id="@+id/corEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cor"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tipoEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Porte -->
        <EditText
            android:id="@+id/porteEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Porte"
            android:inputType="text"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/corEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Última ida ao Petshop -->
        <EditText
            android:id="@+id/ultimaIdaPetShopEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Última ida ao Petshop"
            android:inputType="date"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/porteEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Última ida ao Veterinário -->
        <EditText
            android:id="@+id/ultimaIdaVeterinarioEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Última ida ao Veterinário"
            android:inputType="date"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ultimaIdaPetShopEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Última ida para Vacinação -->
        <EditText
            android:id="@+id/ultimaIdaVacinaEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Última ida para Vacinação"
            android:inputType="date"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ultimaIdaVeterinarioEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão para salvar pet -->
        <Button
            android:id="@+id/salvarPetBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salvar Pet"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonColor2"
            app:layout_constraintTop_toBottomOf="@id/ultimaIdaVacinaEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editarPetBt"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/editarPetBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar Pet"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/buttonColor2"
            app:layout_constraintTop_toBottomOf="@id/ultimaIdaVacinaEt"
            app:layout_constraintStart_toEndOf="@+id/salvarPetBt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Botão para editar ida ao Veterinário -->

        <TextView
            android:id="@+id/qualData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="Qual data deseja atualizar?"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editarPetBt" />


        <!-- TextView para listar pets -->

        <Button
            android:id="@+id/editarIdaVeterinarioBt"
            android:layout_width="118dp"
            android:layout_height="57dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="124dp"
            android:backgroundTint="@color/buttonColor2"
            android:text="Ida ao Veterinário"
            app:layout_constraintEnd_toStartOf="@+id/editarIdaVacinaBt"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/qualData" />

        <Button
            android:id="@+id/editarIdaPetshopBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/buttonColor2"
            android:text="Ida ao Petshop"
            app:layout_constraintEnd_toStartOf="@+id/editarIdaVacinaBt"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/editarIdaVeterinarioBt"
            app:layout_constraintTop_toBottomOf="@+id/editarPetBt" />

        <Button
            android:id="@+id/editarIdaVacinaBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/buttonColor2"
            android:text="Última Vacinação"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/editarIdaPetshopBt"
            app:layout_constraintTop_toBottomOf="@+id/editarPetBt" />


        <Button
            android:id="@+id/discarVeterinarioBt"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/buttonColor2"
            android:text="Discar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/editarIdaVeterinarioBt"
            app:layout_constraintTop_toBottomOf="@+id/editarIdaVacinaBt" />

        <Button
            android:id="@+id/acessarSiteBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/buttonColor2"
            android:text="Acessar site"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/editarIdaPetshopBt"
            app:layout_constraintTop_toBottomOf="@+id/editarIdaVacinaBt" />

        <TextView
            android:id="@+id/listaPetsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Pets"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/editarIdaVacinaBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>